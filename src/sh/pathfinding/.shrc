# vim: ft=zsh
# Works with bash and zsh.

cd() {
    if [ $# -eq 0 ]; then
        dir="$HOME"
    else
        dir="$1"
        if [ -n "$dir" ]; then
            [ ! -d "$dir" ] && dir="$(getdir "$dir" | inorcmd dirname "$dir")"
        else
            return 1
        fi
    fi

    cm ¬ "$PWD"
    builtin cd "$dir"
    ec="$?"

    toplevel="$(git rev-parse --show-toplevel 2> /dev/null)" && [ "$(realpath -P -- "$toplevel")" = "$(realpath -P -- .)" ] && git status

    return "$ec"
}

¬()  { cd "$(_¬ "$@")"      }
@()  { cd "$(_@ "$@")"      }
@i() { cd "$(_@i "$@")"     }
g()  { cd "$(_g "$@")"      }
gi() { cd "$(_gi "$@")"     }
fd() { cd "$(env _fd "$@")" }
ff() { cd "$(_ff "$@")"     }
