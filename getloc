#!/usr/bin/env sh
# Get a directory with a code.
# TODO: Add ordering by usage to match faster.

locfl="$HOME/documents/sys-admin/locations"

if [ $# -eq 0 ]
then
    exit 0
fi

for i
do
    case "$i"
    in
        "*"       ) awk '{print $2}' "$locfl"; exit 0;;
        -s|--safe ) safe="1";;
    esac
done

for i
do
    loc="$( expandpath "$( printf "%s\n" "$( grep -E "^$i\s+.*" "$locfl" | awk '{print $2}' )" )" )"
    [ -z "$loc" ] || {
        mkdir -p -- "$loc"
        printf "%s\n" "$loc"
    }
done
