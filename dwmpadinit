#!/usr/bin/env sh

lckdir="$1"
lck="$2"
shift 2

[ "$lck" != "0" ] && {
    printf "%s\n" "$$" > "$lckdir/$lck/pid"
    printf "%s - %s\n" "dwmpad #$lck" "$(date +"%a %F %R")"

    if [ "$#" -eq 0 ]
    then
        exec "$SHELL"
    else
        { printf "%s " "$@" | head -c -1; printf "\n"; } > "$lckdir/$lck/command"
        exec "$@"
    fi
}


while true
do
    pid="2147483647,$(find "$lckdir" -mindepth 2 -maxdepth 2 -name "pid" -exec cat {} \; | tr '\n' ',')"
    top -n 1 -p "${pid%?}"
    tput civis
    sleep 1
done
